<%- include('../views/partials/header') %>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" name="blogPostTitle" class="form-control" id="blogTitle">
  </div>
  <div class="mb-3">
    <label class="form-label">Post</label>
    <textarea name="blogPostText" rows="8" cols="40" class="form-control"></textarea>
  </div>
  <br />
  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>

</form>

